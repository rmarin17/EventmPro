<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/cardelevation"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/hora"
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/id_hora"
                    android:layout_toEndOf="@+id/id_hora"
                    android:paddingStart="5dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/textTitle"
                    tools:text="Hora"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:id="@+id/id_hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_clock"
                    android:layout_alignLeft="@+id/id_lugar"
                    android:layout_alignStart="@+id/id_lugar"
                    android:paddingTop="10dp"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/event"
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hora"
                    android:paddingStart="15dp"
                    android:paddingTop="5dp"
                    android:text="@string/hor_evento"
                    android:textColor="@color/textTitle"
                    tools:text="@string/hor_evento" />


                <TextView
                    android:id="@+id/evento"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event"
                    android:paddingLeft="15dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/textBody"
                    tools:text="evento" />

                <TextView
                    android:id="@+id/tit"
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/evento"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:text="@string/hor_encargado"
                    android:textColor="@color/textTitle"
                    tools:text="@string/hor_encargado" />

                <TextView
                    android:id="@+id/titulo"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tit"
                    android:paddingLeft="15dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/textBody"
                    tools:text="encargado" />


                <TextView
                    android:id="@+id/lugar"
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/id_lugar"
                    android:layout_toEndOf="@+id/id_lugar"
                    android:layout_toRightOf="@+id/id_lugar"
                    android:paddingBottom="8dp"
                    android:textColor="@color/textTitle"
                    tools:text="Lugar" />

                <ImageView
                    android:id="@+id/id_lugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_place"
                    android:layout_below="@+id/titulo"
                    android:layout_margin="10dp"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </FrameLayout>
</RelativeLayout>